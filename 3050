#include <stdio.h>
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    long long tam = 200000;
    int n;
    long long a[tam], max = 0, dist;
    
    cin >> n;
    
    for (int i = 0; i < n; i++){
        cin >> a[i];
    }
    
    for (int i = 0; i < n; i++){
        for (int j = n; j >= i; j--){
            int p = abs(i-j);
            
            for (int k = 0; k < a[i]; k++){
                for (int m = 0; m < a[j]; m++){
                    dist = a[k] + p + a[m];

                    if (dist > max){
                        max = dist;
                    }
                }
            }
        }
    }
    
    cout << max << endl;
    return 0;
}

/*
cout << "a[i]: " << "a[" << i << "] = " << a[i] << endl;
cout << "a[j]: " << "a[" << j << "] = " << a[j] << endl;
cout << "a[k]: " << "a[" << k << "] = " << a[k] << endl;
cout << "a[m]: " << "a[" << m << "] = " << a[m] << endl;
cout << "p = " << p << endl;
cout << "dist = " << dist << endl;
